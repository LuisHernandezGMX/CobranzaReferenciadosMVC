<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Recibos de Cobranza Referenciados</title>
        @Styles.Render("~/Content/css")
        @RenderSection("styles", false)
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Recibos de Cobranza Referenciados", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Subir Archivo de Texto", "Index", "SubirArchivoTexto")</li>
                        <li>@Html.ActionLink("Actualizar Referencia", "Index", "ActualizarReferencia")</li>
                        <li>@Html.ActionLink("Exportar Recibos", "Index", "ExportarRecibos")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Grupo Mexicano de Seguros, S.A. de C.V.</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/general")
        @RenderSection("scripts", required: false)
    </body>
</html>
