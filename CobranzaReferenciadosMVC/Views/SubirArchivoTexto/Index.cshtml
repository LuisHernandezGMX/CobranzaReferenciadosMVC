@{
    ViewBag.Title = "Subir Archivo de Texto";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Subir Archivo de Texto</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-5">
        <div class="form-group">
            <label>Archivo:</label>
            <input type="file" id="archivo" accept=".txt" />
        </div>
    </div>
    <div class="col-sm-7">
        <button id="btnSubirArchivo" class="btn btn-primary" disabled>
            <span class="fas fa-upload"></span>
            Subir Archivo de Texto
        </button>
        <button id="btnLimpiarPantalla" class="btn btn-default">
            <span class="fas fa-broom"></span>
            Limpiar Pantalla
        </button>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <hr>
        <p id="mensajeBarraProgreso" class="text-primary"></p>
        <div class="progress progress-striped active">
            <div id="barraProgreso" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%"></div>
        </div>
        <div class="table-responsive">
            <table id="tablePrevisualizacion" class="table table-striped table-bordered table-condensed" style="font-size:8pt">
                <thead>
                    <tr class="info">
                        <th>Fecha</th>
                        <th>Referencia 1</th>
                        <th>Referencia 2</th>
                        <th>Monto</th>
                        <th>Tipo de Movimiento</th>
                        <th>Banco</th>
                        <th>Leyenda</th>
                    </tr>
                </thead>
                <tbody id="previewRegistros"></tbody>
                <tfoot>
                    <tr class="info">
                        <th>Fecha</th>
                        <th>Referencia 1</th>
                        <th>Referencia 2</th>
                        <th>Monto</th>
                        <th>Tipo de Movimiento</th>
                        <th>Banco</th>
                        <th>Leyenda</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var PREVISUALIZAR_ARCHIVO_URL = "@Url.Action("PrevisualizarArchivo", "SubirArchivoTexto")";
        var SUBIR_ARCHIVO_URL = "@Url.Action("SubirArchivo", "SubirArchivoTexto")";
    </script>
    @Scripts.Render("~/bundles/SubirArchivoTexto/Index")
}